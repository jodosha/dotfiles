#!/bin/bash

name=$1
dir="$HOME/Code/$name"
cd "$dir" || exit 1

if ! tmux has-session -t "=$name" 2>/dev/null; then
  tmux start-server          \;\
    set -g remain-on-exit on \;\
    new-session -d -s "$name"

  if [[ -f ".tmuxrc" ]]; then
    tmux source-file ".tmuxrc"
  elif [[ -f "$HOME/.tmuxrc" ]]; then
    tmux source-file "$HOME/.tmuxrc"
  fi
fi

if [[ -n "$TMUX" ]]; then
  tmux switch-client -t "=$name"
else
  tmux attach -t "=$name"
fi
